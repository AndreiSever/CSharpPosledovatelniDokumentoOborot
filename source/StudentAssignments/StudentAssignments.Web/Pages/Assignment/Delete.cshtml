@page
@model StudentAssignments.Web.Pages.Assignment.DeleteModel

@{
    ViewData["Title"] = "Удаление задания";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Вы действительно хотите удалить это задание?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Workflow.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Workflow.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Workflow.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Workflow.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Workflow.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Workflow.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Workflow.IsCompleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Workflow.IsCompleted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Workflow.CurrentStage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Workflow.CurrentStage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Workflow.TemplateName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Workflow.TemplateName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Workflow.Grade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Workflow.Grade)
        </dd>
        @if (Model.Workflow.IsCompleted)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Workflow.Documents)
            </dt>
            <dd class="col-sm-10">
                @foreach (var doc in Model.Workflow.Documents)
                {
                    <div class="mb-2">
                        <span>@doc.Title</span>
                        <span class="stage-indoc"><a href="@doc.Link">@doc.Filename <i class="fas fa-download"></i></a></span>
                    </div>
                }
            </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Workflow.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
