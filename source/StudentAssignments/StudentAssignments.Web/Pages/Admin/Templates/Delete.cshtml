@page
@model StudentAssignments.Web.Pages.Admin.Templates.DeleteModel

@{
    ViewData["Title"] = "Удаление шаблона";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Вы действительно хотите удалить этот шаблон?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Template.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Template.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Template.Content)
        </dt>
        <dd class="col-sm-10">
            <a asp-page="./Details" asp-page-handler="GetContent" asp-route-id="@Model.Template.Id">@Model.Template.Filename</a>
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Template.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
