@page
@model StudentAssignments.Web.Pages.Admin.Groups.DeleteModel

@{
    ViewData["Title"] = "Удаление группы";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Вы действительно хотите удалить эту группу?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group.AssignmentsAllowed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.AssignmentsAllowed)
        </dd>
    </dl>
    <div class="row">
        <div class="col-md-4 mb-3">
            <label class="font-weight-bold">Состав:</label>
            <ul class="list-group" id="users-list">
                @foreach (var user in Model.Group.Users)
                {
                    <li class="list-group-item">
                        <span><a asp-page="../Users/Details" asp-route-id="@user.Id">@user.FullName</a></span>
                    </li>
                }
            </ul>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Group.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
