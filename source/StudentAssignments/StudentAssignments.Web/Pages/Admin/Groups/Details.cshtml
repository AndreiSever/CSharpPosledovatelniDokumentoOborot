@page
@model StudentAssignments.Web.Pages.Admin.Groups.DetailsModel

@{
    ViewData["Title"] = "Группа";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group.AssignmentsAllowed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.AssignmentsAllowed)
        </dd>
    </dl>
    <div class="row">
        <div class="col-md-4 mb-3">
            <label class="font-weight-bold">Состав:</label>
            <ul class="list-group" id="users-list">
                @foreach (var user in Model.Group.Users)
                {
                    <li class="list-group-item">
                        <span><a asp-page="../Users/Details" asp-route-id="@user.Id">@user.FullName</a></span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Group.Id">Редактировать</a> |
    <a asp-page="./Delete" asp-route-id="@Model.Group.Id">Удалить</a>
</div>
