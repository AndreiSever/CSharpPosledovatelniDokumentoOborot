@page
@model StudentAssignments.Web.Pages.Admin.Users.IndexModel

@{
    ViewData["Title"] = "Пользователи";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Register" asp-route-returnUrl="@Url.Page("Index")">Создать пользователя</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserEntity[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEntity[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEntity[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.UserEntity) {
        <tr>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.UserName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.Name)
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
