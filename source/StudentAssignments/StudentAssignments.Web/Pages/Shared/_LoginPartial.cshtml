@using Microsoft.AspNetCore.Identity
@using StudentAssignments.Web.Model
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        @*<a id="manage" class="nav-link text-dark mark" title="">@UserManager.GetUserName(User)</a>*@
        <span class="nav-link text-dark mark">@((await UserManager.GetUserAsync(User)).ShortName)</span>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-page="/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Выйти</button>
        </form>
    </li>
}
else
{
    @*<li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-page="/Admin/Register">Register</a>
    </li>*@
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-page="/Login">Войти</a>
    </li>
}
</ul>
